---
import Badge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import Briefcase from "../icons/Briefcase.astro";
import GitHubIcon from "../icons/GitHubIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import LogoIcon from "../icons/LogoIcon.astro";
import MailerIcon from "../icons/MailerIcon.astro";
import ProyectsIcon from "../icons/ProyectsIcon.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Oscar's Portfolio - Desarrollador y Programador Web"
  description="A Brief description of my expirience developing"
>
  <main class="px-4">
    <SectionContainer class="py-60" id="home">
      <img
        class="size-12 rounded-full"
        src="/avataroscar.png"
        alt="Rounded avatar"
      />

      <h1 class=
        "text-white text-2xl font-semibold flex flex-row gap-x-4 py-5
        lg:text-4xl
      ">
        Hola, soy Oscar Ortega <a
          href="https://www.linkedin.com/in/oscar-ortega-guerrero-94ba76243/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Abierto a ofertas laborales</Badge>
        </a>
      </h1>
      <h2 class="text-2xl text-wrap">
        <span>+3 a√±os de experiencia</span><span class="opacity-80"
          >Desarrollador Web.
        </span><span class="text-yellow-200/90">De Pasto, Colombia. </span><span
          class="text-red-200/90">Especializado en Ruby on Rails.</span
        >
      </h2>
      <nav class="flex gap-x-2 mt-6">
        <SocialPill
          href="https://www.linkedin.com/in/oscar-ortega-guerrero-94ba76243/"
        >
          <LinkedInIcon class="size-6" />
           LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/oortega14">
          <GitHubIcon class="size-6" />
           GitHub
        </SocialPill>
        <SocialPill
          href="mailto:ortegaoscar14@gmail.com"
        >
          <MailerIcon class="size-6" />
           ortegaoscar14@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experience" class="pb-32">
      <h2 class="text-2xl font-semibold mb-5 flex items-center gap-x-3 ">
				<Briefcase class="size-8"/>
				Experiencia Laboral
			</h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2 class="text-2xl font-semibold mb-5 flex items-center gap-x-3 ">
				<ProyectsIcon class="size-8"/>
				Proyectos
			</h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
